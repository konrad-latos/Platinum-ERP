<Window x:Name="Glowna" x:Class="Platinum_ERP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platinum_ERP"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1780" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" >
    <Viewbox x:Name="X1_Viewbox1" VerticalAlignment="Top" Margin="10" Stretch="Fill">
        <Grid>
           
            <DockPanel>
                <TabControl x:Name="TabControl1" Width="{Binding ActualWidth, ElementName=X1_Viewbox1}" Height="{Binding ActualHeight, ElementName=X1_Viewbox1}" DockPanel.Dock="Bottom">

                </TabControl>
                <WrapPanel DockPanel.Dock="Top" Height="Auto" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button x:Name="Button_1" Content="Flota" Margin ="0" Width ="50" Height="50" Click="Button_1_Click" Background="{x:Null}"/>
                    <Button x:Name="Button_2" Content="2" Margin ="10" Width ="50" Height="50" Click="Button_2_Click"/>
                </WrapPanel>
                <TextBox x:Name="zx" TextWrapping="Wrap" Text="TextBox" Width="100"/>

            </DockPanel>
        </Grid>
    </Viewbox>
</Window>
